<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - FilmArchive</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/FilmArchive.styles.css" asp-append-version="true" />

    <style>
        body {
            background-color: #121212;
            color: white;
        }

        /* Navbar Styling */
        .navbar-custom {
            background: linear-gradient(90deg, #000000, #1c1c1c);
            padding: 15px;
        }

        .navbar-brand {
            font-size: 1.8rem;
            font-weight: bold;
            color: #f5c518 !important;
            animation: glow 2s infinite alternate;
        }

        .nav-link {
            color: white !important;
            font-weight: 500;
            transition: 0.3s ease;
        }

            .nav-link:hover {
                color: #f5c518 !important;
                transform: scale(1.05);
            }

        .search-box {
            width: 250px;
            border-radius: 20px;
            padding-left: 15px;
        }

        footer {
            background-color: #000;
            padding: 10px 0;
            text-align: center;
            color: #aaa;
        }
    </style>
</head>

<body>

    <!-- 🔥 Fancy Navbar -->
    <!-- Navbar -->
    <div class="container position-sticky z-index-sticky top-0">
        <div class="row">
            <div class="col-12">

                <nav class="navbar navbar-expand-lg shadow position-absolute start-0 end-0 mx-auto my-4"
                        style="
                        width: 92%;
                        background: rgba(0, 0, 0, 0.55);
                        backdrop-filter: blur(15px);
                        -webkit-backdrop-filter: blur(15px);
                        border-radius: 25px;
                        border: 1px solid rgba(255,255,255,0.15);
                        padding: 12px 30px;
                        box-shadow: 0 10px 30px rgba(0,0,0,0.6);
                                                                 ">
                    <div class="container-fluid">

                        <!-- Logo / Brand -->
                        <a class="navbar-brand font-weight-bold text-white ms-3"
                           asp-controller="Home" asp-action="Index"
                           style="font-size:20px; letter-spacing:1px;">
                            🎬 FilmArchiveDB
                        </a>

                        <button class="navbar-toggler shadow-none ms-2" type="button"
                                data-bs-toggle="collapse" data-bs-target="#navigation">
                            <span class="navbar-toggler-icon"></span>
                        </button>

                        <div class="collapse navbar-collapse" id="navigation">

                            <ul class="navbar-nav ms-auto align-items-lg-center">

                                <!-- Movies -->
                                <li class="nav-item mx-2">
                                    <a class="nav-link text-white"
                                       asp-controller="Movie" asp-action="Index">
                                        🎥 Movies
                                    </a>
                                </li>

                                <!-- Genres -->
                                <li class="nav-item mx-2">
                                    <a class="nav-link text-white"
                                       asp-controller="Genres" asp-action="Index">
                                        🎭 Genres
                                    </a>
                                </li>

                                <!-- Cast -->
                                <li class="nav-item mx-2">
                                    <a class="nav-link text-white"
                                       asp-controller="Cast" asp-action="Index">
                                        👥 Cast
                                    </a>
                                </li>

                                <!-- Top Rated -->
                                <li class="nav-item mx-2">
                                    <a class="nav-link text-warning"
                                       asp-controller="Movie" asp-action="TopRated">
                                        ⭐ Top Rated
                                    </a>
                                </li>

                                <!-- Trending -->
                                <li class="nav-item mx-2">
                                    <a class="nav-link text-danger"
                                       asp-controller="Movie" asp-action="Trending">
                                        🔥 Trending
                                    </a>
                                </li>

                                <!-- Add Movie -->
                                <li class="nav-item mx-2">
                                    <a class="btn btn-success btn-sm"
                                       asp-controller="Movies" asp-action="Create">
                                        ➕ Add Movie
                                    </a>
                                </li>

                                <!-- Search -->
                                <li class="nav-item ms-3">
                                    <form asp-controller="Movie" asp-action="Search" method="get" class="d-flex">
                                        <input type="text" name="query"
                                               placeholder="Search movies..."
                                               style="border-radius:20px; padding:5px 12px; border:none;">
                                    </form>
                                </li>

                            </ul>

                        </div>
                    </div>
                </nav>

            </div>
        </div>
    </div>
    <!-- End Navbar -->


    <!-- Main Body -->
    <div class="container mt-4">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <!-- Footer -->
    <footer>
        &copy; 2026 - 🎥 FilmArchiveDB | Built with ASP.NET Core
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)

</body>
</html>
